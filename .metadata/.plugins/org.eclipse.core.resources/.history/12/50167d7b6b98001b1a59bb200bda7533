package Vagoni;

import java.util.LinkedList;
import java.util.List;

public class Treno {
	
	private List<Vagone> treno = new LinkedList<Vagone>();
	
	public void aggiungiVagone(Vagone vagone) {
		this.treno.add(vagone);
	}
	
	public void accendi() {
		for (Vagone vagone : treno) {
			vagone.accendi();
		}
		System.out.print("\n");
	}
	
	public int numeroCarrozze() {
		return this.treno.size();
	}

}
