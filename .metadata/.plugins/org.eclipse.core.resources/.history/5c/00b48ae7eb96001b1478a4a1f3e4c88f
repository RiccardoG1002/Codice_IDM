package Cantiere;

import java.util.ArrayList;
import java.util.List;

import Figure.Figura;

public class TanGram {
	
	private List<Figura> list = new ArrayList<Figura>();
	private String nomeForma; 
	
	public TanGram(String nomeforma) {
		this.nomeForma = nomeforma;
	}
	
	public void addFigura(Figura f) {
		list.add(f);
	}
	
	public double calcolaAreaTotale() {
		double areaTotale = 0;
		for(Figura f : list) {
			areaTotale = areaTotale + f.area();
		}
		return areaTotale;
	}
	
	public String nomeForma() {
		return this.nomeForma;
	}
	
}
