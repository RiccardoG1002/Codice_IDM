package Cantiere;

import java.util.LinkedList;
import java.util.List;

import Figure.Figura;

public class FiIguraComposta implements Figura {
	
	private List<Figura> list = new LinkedList<Figura>();
	private String nomeForma; 
	
	public FiIguraComposta(String nomeforma) {
		this.nomeForma = nomeforma;
	}
	
	public void addFigura(Figura f) {
		list.add(f);
	}
	
	public String nomeForma() {
		return this.nomeForma;
	}

	@Override
	public double area() {
		double areaTotale = 0;
		for(Figura f : list) {
			areaTotale = areaTotale + f.area();
		}
		return areaTotale;
	}
	
}
