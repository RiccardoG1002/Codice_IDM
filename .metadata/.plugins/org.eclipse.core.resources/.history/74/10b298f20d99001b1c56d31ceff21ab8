package Figure.Triangoli;

import Figure.Figura;

public class Triangolo extends FiguraBase {
	
	private double base;
	private double altezza;
	
	public Triangolo(double base, double altezza) {
		this.base = base;
		this.altezza = altezza;
	}

	@Override
	public double area() {
		return (base * altezza) / 2;
	}

	@Override
	public int compare(Figura o1, Figura o2) {
		if(o1.area() == o2.area()) return 0;
		else if(o1.area() > o2.area()) return 1;
		else return -1;
	}
}
