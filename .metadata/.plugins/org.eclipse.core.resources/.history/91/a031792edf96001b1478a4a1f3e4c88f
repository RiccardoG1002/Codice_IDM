import Caffè.AbstractCaffe;
import Caffè.Cappuccino;
import Caffè.Espresso;
import Caffè.IrishCoffee;

public class TestCaffe {

	public static void main(String[] args) {
		AbstractCaffe caffe = new IrishCoffee();
		caffe.descrizione();
		System.out.println("L'Irish coffee costa: " + caffe.prezzo() + " $");
		caffe = new Cappuccino();
		caffe.descrizione();
		System.out.println("Il Cappuccino costa: " + caffe.prezzo() + " $");
		caffe = new Espresso();
		caffe.descrizione();
		System.out.println("L'Espresso costa: " + caffe.prezzo() + " $");
	}

}
