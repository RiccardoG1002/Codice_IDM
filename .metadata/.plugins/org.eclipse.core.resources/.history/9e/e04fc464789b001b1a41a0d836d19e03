package ComponentiTreni;

import Exceptions.TroppiPasseggeriException;

public class VagonePasseggeriTI extends VagonePasseggeri {
	
	private int postiOccupati;

	@Override
	protected void stampaPersonalizzata() {
		System.out.print("ðŸ˜©");
	}
	
	@Override
	protected void aggiungiPasseggeriPersonalizzato(int numeroPasseggeri) throws Exception {
		if(numeroPasseggeri > 100) throw new TroppiPasseggeriException(100);
		this.postiOccupati = numeroPasseggeri;
	}

	@Override
	protected double pesoPersoneTrasportate() {
		return 70 * postiOccupati;
	}

	@Override
	protected int capienzaPersonalizzata() {
		return 80;
	}

}
