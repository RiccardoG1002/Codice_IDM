
public class Studente extends Persona {
	//1 dati - proprietà
    //private String nome;
    //private String cognome; 
    private String matricola; 
    
    //2.1 funzionalità - metodi
    public void stampaDati() {
        System.out.println("dati anagrafici: " + nome + 
                " " + cognome + " " + matricola); 
    }

    
    //2.2 metodo costruttore
    // ha lo stesso nome della classe
    // crea le istanze
    // si invoca con la parola chiave new
    // può essere eseguito una sola volta per una istanza (all'atto della creazione)
    // il tipo di ritorno è un'istanza della classe
    
    public Studente(String nome, String cognome, String matricola) {
        super(nome, cognome); // super è il riferimento alla classe padre, 
        // super() è l'invocazione del metodo costruttore della classe padre 
        //this.nome = nome;
        //this.cognome = cognome;
        this.matricola = matricola;
    }

            // metodo che si occupa della conversione automatica da oggetto a Stringa
    public String toString() {
        return "Studente [nome=" + nome + ", cognome=" + cognome + ", matricola=" + matricola + "]";
    }

}
