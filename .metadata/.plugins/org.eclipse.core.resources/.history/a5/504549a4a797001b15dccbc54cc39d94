import Vagoni.Treno;

public class Venditore {
	private FabbricaTreni fabbrica;
	public static Treno ordinaTreno(String ordine) {
		Treno t = null;
		if(controllaOrdine(ordine)) {
			for (int i = 0; i < ordine.length(); i++) {
				if(ordine.charAt(i) == 'H') {
					t.aggiungiVagone(fabbrica = new FabbricaLocomotive().crea());
				}
			}
		}
		return t;
	}
	
	private static boolean controllaOrdine(String ordine) {
		return true;
	}
}
