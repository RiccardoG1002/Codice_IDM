package Cantiere;

import java.util.ArrayList;
import java.util.Comparator;
import java.util.List;

import Figure.Figura;

public class TanGram implements Figura {
	
	private List<Figura> list = new ArrayList<Figura>();
	private String nomeForma; 
	
	public TanGram(String nomeforma) {
		this.nomeForma = nomeforma;
	}
	
	public void addFigura(Figura f) {
		list.add(f);
		list.sort(Comparator.comparingDouble(Figura::area()));
	}
	
	public String nomeForma() {
		return this.nomeForma;
	}

	@Override
	public double area() {
		double areaTotale = 0;
		for(Figura f : list) {
			areaTotale = areaTotale + f.area();
		}
		return areaTotale;
	}
	
}
