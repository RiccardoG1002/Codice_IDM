import Vagoni.Treno;

public class TestTreni {

	public static void main(String[] args) {
		
		Treno treno = Venditore.ordinaTreno("HCCCCCRP");
		treno.accendi();
		treno = Venditore.ordinaTreno("HCRRPPCCRP");
		treno.accendi();
		treno = Venditore.ordinaTreno("HCCCCCCCC");
		treno.accendi();
		treno = Venditore.ordinaTreno("HPPPRPPPRCCC");
		treno.accendi();
		treno = Venditore.ordinaTreno("PPPPRPPPRCCC");
		if (treno.numeroCarrozze() == 0) {
			System.out.println("\u001B[31m" + "Il tuo ordine non Ã¨ valido!");
		}
		
	}

}
