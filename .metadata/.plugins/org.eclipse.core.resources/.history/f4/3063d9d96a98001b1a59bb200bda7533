import Fabbriche.FabbricaCargo;
import Fabbriche.FabbricaLocomotive;
import Fabbriche.FabbricaTreni;
import Fabbriche.FabbricaVagonePasseggeri;
import Fabbriche.FabbricaVagoneRistorante;
import Vagoni.Treno;

public class Venditore {

	public static final Treno ordinaTreno(String ordine) {
		FabbricaTreni fabbrica = null;
		Treno t = new Treno();
		if (controllaOrdine(ordine)) {
			for (int i = 0; i < ordine.length(); i++) {
				if (ordine.charAt(i) == 'H') {
					fabbrica = new FabbricaLocomotive();
					t.aggiungiVagone(fabbrica.crea());
				} else if (ordine.charAt(i) == 'P') {
					fabbrica = new FabbricaVagonePasseggeri();
					t.aggiungiVagone(fabbrica.crea());
				} else if (ordine.charAt(i) == 'R') {
					fabbrica = new FabbricaVagoneRistorante();
					t.aggiungiVagone(fabbrica.crea());
				} else if (ordine.charAt(i) == 'C') {
					fabbrica = new FabbricaCargo();
					t.aggiungiVagone(fabbrica.crea());
				}
			}
		}
		return t;
	}

	private static final boolean controllaOrdine(String ordine) {
		if(ordine.charAt(0) != "H") return false;
		return true;
	}
}
