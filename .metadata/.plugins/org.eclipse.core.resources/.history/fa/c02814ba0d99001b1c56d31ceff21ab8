package Figure.PoligoniRegolari;

import Figure.Figura;

public class Esagono implements PoligonoRegolare {
	
	private double lato;
	private double apotema;
	
	public Esagono(double lato, double apotema) {
		this.lato = lato;
		this.apotema = apotema;
	}
	
	private double perimetro() {
		return lato * 6;
	}

	@Override
	public double area() {
		return this.perimetro() * apotema / 2;
	}

	@Override
	public int numeroLati() {
		return 6;
	}
	
	@Override
	public int compare(Figura o1, Figura o2) {
		if(o1.area() == o2.area()) return 0;
		else if(o1.area() > o2.area()) return 1;
		else return -1;
	}

}
